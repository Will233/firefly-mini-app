.info-container {
  height: 100%;
  box-sizing: border-box;
}

.signin-wrap {
  background: #dfdfdf;
  color: #fff;
  height: 300rpx;
  width: 100%;
}

.signin-notice {
  line-height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-wrap {
  padding: 0 20rpx;
}

.form-wrap .input-wrap {
  padding: 20rpx 0;
  border-bottom: solid 1px #ccc;
}

.form-wrap .input-wrap input {
  color: #2f9833;
}

.form-wrap .textarea-wrap {
  margin: 20rpx 0;
  padding: 20rpx;
  border: solid 1px #ccc;
  border-radius: 20rpx;
}

.form-wrap button {
  background: #2f9833;
  color: #fff;
}
.readtime-section{
	margin-top:10px;
}
.readtime-section .readtime{
 	color:#666;
}
slide.readtime{
 margin: 10px 0px;
}

.record-wrap {
  width: 100%;
  color: #555;
  margin-top: 20rpx;
}

.info-item-wrap {
  width: 100%;
  padding: 10rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 400rpx;
  background: url('http://1.fireflyread.applinzi.com/images/bg.png') no-repeat;
  background-size: cover;
  color: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.profile-column-wrap {
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.profile-item {
  height: 100rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.item-key-txt {
  font-size: 0.7rem;
  color: #fff;
}

.item-val-txt {
  color: #2f9833;
  padding: 0.5rem 0;
}

.data-wrap {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 300rpx;
  background: #ccc;
  padding: 10px;
}

.data-wrap text {
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

.data-wrap text.record-day {
  position: absolute;
  padding-left: 30px;
  top: 40rpx;
  text-align: left;
  width: 100%;
  font-size: .7rem;
  line-height: 1rem;
  color: #b2a00c;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.error-wrap{
   width:100%;
   background: #e64340;
   color: #fff;
   padding:5px 0;
   text-align:center;
   font-size:.7rem;
}
.data-wrap text.content-txt {
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  min-height: 200rpx;
  max-height: 200rpx;
  color: #fff;
}

.data-wrap text.frombook-txt {
  position: absolute;
  top: 40rpx; 
  color: #555;
  font-size: 0.7rem;
  padding-right: 30px;
  line-height: 1rem;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sign-wrap {
  padding: 80rpx;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

.sign-wrap button {
  background: #2f9833;
  height: 80rpx;
  border-radius: 100rpx;
  width: 100%;
  font-size: 40rpx;
  line-height: 80rpx;
  background: transparent;
  color: #2f9833;
  border: solid 1px #2f9833;
}

.signrecord-wrap {
  height: 400rpx;
  background: #b5d7d3;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

.signrecord-wrap .item-title {
  height: 60rpx;
  background: #2f9833;
}

